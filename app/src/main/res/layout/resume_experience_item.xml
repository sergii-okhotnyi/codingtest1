<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/companyLogo"
            android:layout_marginRight="8dp"
            android:layout_width="70dp" android:layout_height="70dp"/>

    <TextView
            android:layout_toRightOf="@id/companyLogo"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_alignLeft="@id/companyName"
            android:layout_below="@id/companyName"
            android:id="@+id/companyRole"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_alignLeft="@id/companyName"
            android:layout_below="@id/companyRole"
            android:id="@+id/companyDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_below="@id/companyLogo"
            android:id="@+id/companyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>